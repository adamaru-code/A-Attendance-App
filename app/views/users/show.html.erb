<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :affiliation, class: "label-signup" %>
      <%= f.text_field :affiliation, class: "form-control" %>
      
      <%= f.label :employee_number, class: "label-signup" %>
      <%= f.text_field :employee_number, class: "form-control" %>
      
      <%= f.label :card_number, class: "label-signup" %>
      <%= f.text_field :card_number, class: "form-control" %>
      
      <%= f.label :password, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :basic_work_time, class: "label-signup" %>
      <%= f.time_field :basic_work_time, class: "form-control" %>

      <%= f.label :designated_work_start_time, class: "label-signup" %>
      <%= f.time_field :designated_work_start_time, class: "form-control" %>
      
      <%= f.label :designated_work_end_time, class: "label-signup" %>
      <%= f.time_field :designated_work_end_time, class: "form-control" %>

      <%= f.submit "更新する", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>